<% layout("./layouts/boilerplate.ejs") %>
<body>
    
    <h2>Edit this Listing</h2>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="post" class="new-form needs-validation" novalidate >
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" required name="listing[price]" value="<%= listing.price %>" class="form-control">
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" required name="listing[country]" value="<%= listing.country %>" class="form-control">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image Url</label>
            <input type="text" required name="listing[image][url]" value="<%= listing.image.url %>" class="form-control">
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" required name="listing[location]" value="<%= listing.location %>" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
    
    
    
</body>
